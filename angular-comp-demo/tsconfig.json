{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "skipLibCheck": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
	  "target": "es5",
	  "paths": {"exceljs": ["node_modules/exceljs/dist/exceljs.min"]},
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018","dom"],
	  "allowSyntheticDefaultImports": true
  }
}
